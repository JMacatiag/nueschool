    <!--Notes bar to be customized-->
    <div class="container">
    <div class="row">
        <form class="notes-form">
            <div class="form-group">  
                <label for="user">Enter your notes and submit</label>
                <input type="text" class="form-control input-lg" id="note-input" name="notes"></input>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>

        <div class = 'row'>
            <div class = 'col-md-12 notes-holder'>
                <ul class="list-group">
                    {{#each notes}}
                    <li class="list-group-item">
                         {{this.note}}
                        <button type="submit" class="btn btn-danger edit" data-noteid="{{this.id}}">edit note</button>
                 
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
